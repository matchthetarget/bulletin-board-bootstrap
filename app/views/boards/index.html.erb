<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card">
      <div class="card-header">
        <h1 class="h6 my-1">All boards</h1>
      </div>

      <div class="list-group list-group-flush">
        <% @list_of_boards.each do |a_board| %>
          <a href="/boards/<%= a_board.id %>" class="d-flex list-group-item list-group-item-action">
            <%= a_board.name %>

            <div class="ms-auto">
              <i class="fa-solid fa-chevron-right"></i>
            </div>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>
