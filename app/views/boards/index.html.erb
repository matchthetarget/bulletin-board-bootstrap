<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card">
      <div class="card-header">
        <h1 class="h6 m-0">All boards</h1>
      </div>

      <div class="list-group list-group-flush">
        <% @list_of_boards.each do |a_board| %>
          <a href="/boards/<%= a_board.id %>" class="d-flex list-group-item list-group-item-action">
            <%= a_board.name %>

            <div class="ms-auto">
              <i class="fa-solid fa-chevron-right"></i>
            </div>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div>
  <div>
    <h1>
      List of all boards
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new board
    </h2>

    <form action="/insert_board" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create board
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_boards.each do |a_board| %>
      <tr>
        <td>
          <%= a_board.id %>
        </td>

        <td>
          <%= a_board.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_board.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_board.updated_at) %> ago
        </td>

        <td>
          <a href="/boards/<%= a_board.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
